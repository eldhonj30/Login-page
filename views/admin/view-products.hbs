<section>
    <div class="container">
        <div class="row">
            <a href="/admin/add-products" class="btn btn-success ml-2 mt-3">Add products</a>
             {{!-- <a href="/adminLogout" class="btn btn-success ml-2 mt-3">LogOut</a> --}}
            <a href="/admin/all-users" class="btn btn-success ml-auto mt-3">User data</a>
        </div>
        <table class="table mt-4" id="productsTable">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Tittle</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th>Image</th>
                    <th>
                    <th scope="col">Update</th>
                    </th>


                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{this.Name}}</th>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                    <td>{{this.MRP}}</td>

                    <td><img style="width:50px; height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>

                    <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
                    <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Are you want to delete {{this.Name}}?')">Delete</a></td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</section>


 <script>
  $(function(){
    $('#productsTable').DataTable({
        "dom": '<"top"i>rt<"bottom"flp><"clear">',
    });
  })
</script>